generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model destinations {
  id            Int      @id @default(autoincrement())
  name          String?
  rating        Decimal? @db.Decimal(12, 2)
  tipe          String?
  url_gambar    String?  @map("url_gambar")
  provinsi      String?
  kategori      String?
  created_at    DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  deskripsi     String?
  jumlah_review Int?     @map("jumlah_review")
  latitude      Decimal? @db.Decimal(12, 6)
  longitude     Decimal? @db.Decimal(12, 6)
}

model kuliners {
  id         Int      @id @default(autoincrement())
  deskripsi  String?
  provinsi   String?
  created_at DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  name       String?
  url_gambar String?  @map("url_gambar")
}

model rekomendasi_destinasi {
  id         Int      @id @default(autoincrement())
  user_id    Int
  created_at DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  kategori   String
  score      Int?
  users      users    @relation(fields: [user_id], references: [id])
}

model access_tokens {
  id        Int    @id @default(autoincrement())
  user_id   Int
  token_jwt String
  users     users  @relation(fields: [user_id], references: [id])
}

model users {
  id                    Int                     @id @default(autoincrement())
  name                  String?
  email                 String?
  gender                String?
  password              String?
  created_at            DateTime                @default(now()) @db.Timestamptz(6)
  access_tokens         access_tokens[]
  rekomendasi_destinasi rekomendasi_destinasi[]
}
